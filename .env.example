# Configurações do Backend - Ponto Digital

# Servidor
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ponto_digital

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=24h

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend
FRONTEND_URL=http://localhost:3000

# Upload de arquivos
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Segurança
BCRYPT_ROUNDS=12

# Geolocalização
DEFAULT_GPS_RADIUS=100

# Email (opcional para notificações)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=